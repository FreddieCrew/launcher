{
  "name": "openmp-launcher",
  "version": "1.0.0",
  "description": "Open.mp Launcher for Linux",
  "main": "./out/main/index.js",
  "author": "John M. R",
  "homepage": "",
  "build": {
    "appId": "com.omp-launcher",
    "productName": "Open.mp Launcher",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "out/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Open.mp Launcher"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "maintainer": "John M. R <120303127+FreddieCrew@users.noreply.github.com>",
      "category": "Game",
      "icon": "resources/icons"
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck": "tsc --noEmit -p tsconfig.node.json --composite false && tsc --noEmit -p tsconfig.web.json --composite false",
    "compile:injector": "node scripts/build-injector.mjs",
    "fetch:assets": "node scripts/fetch-assets.mjs",
    "prepare-build": "pnpm run fetch:assets && pnpm run compile:injector",
    "dev": "pnpm run prepare-build && electron-vite dev",
    "build": "pnpm run prepare-build && pnpm run typecheck && electron-vite build",
    "build:linux": "pnpm run build && electron-builder --linux",
    "build:win": "pnpm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.3",
    "iconv-lite": "^0.7.1",
    "node-7z": "^3.0.0",
    "react-virtualized-auto-sizer": "^2.0.1",
    "react-virtuoso": "^4.18.1",
    "remixicon": "^4.8.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^22.19.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller",
      "esbuild"
    ]
  }
}
